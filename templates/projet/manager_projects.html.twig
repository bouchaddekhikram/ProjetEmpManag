{% extends 'template.html.twig' %}

{% block title %}Projet{% endblock %}
  {% block pageTitle %}
      List Projets
  {% endblock %}
{% block body %}

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>NomProjet</th>
            <th>Description</th>
            <th>DateDebut</th>
            <th>DataFin</th>
            <th>Status</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.nomProjet }}</td>
                <td>{{ projet.Description }}</td>
                <td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ projet.dataFin ? projet.dataFin|date('Y-m-d') : '' }}</td>
                <td>{{ projet.status }}</td>
                <td>
                    {# Redirection the manager to view and Update his projects #}
                    <a href="{{ path('app_manager_projet_show', {'id': projet.id}) }}">show</a>
                    <a href="{{ path('app_projet_manager_edit', {'id': projet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('app_projet_new') }}">Create new</a>#}
{% endblock %}
