{% extends 'template.html.twig' %}

{% block title %}Projet index{% endblock %}
  {% block pageTitle %}
      List Project
  {% endblock %}
{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>NomProjet</th>
            <th>Description</th>
            <th>DateDebut</th>
            <th>DataFin</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.nomProjet }}</td>
                <td>{{ projet.Description }}</td>
                <td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ projet.dataFin ? projet.dataFin|date('Y-m-d') : '' }}</td>
                <td>{{ projet.status }}</td>
                <td>
                    <div class="d-flex ">
                        <a href="{{ path('app_user_edit', {'id': projet.id}) }}" class="btn btn-outline-primary me-3">Edit</a>
                        {{ include('projet/_delete_form.html.twig') }}
                        {#                        <a href="{{ path('app_dashboard') }}" class="btn btn-outline-success me-3">Create new</a>#}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dashboard') }}">back to dashboard</a>
{% endblock %}
