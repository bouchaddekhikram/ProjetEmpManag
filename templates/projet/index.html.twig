{% extends 'template.html.twig' %}

{% block title %}Projet{% endblock %}
{% block pageTitle %}
    Liste des projets
{% endblock %}
{% block navbars %}
    <a class="nav-link" href="{{ path('app_projet_new') }}">Add Projet</a>
{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomProjet</th>
                <th>Description</th>
                <th>DateDebut</th>
                <th>DataFin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.nomProjet }}</td>
                <td>{{ projet.Description }}</td>
                <td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ projet.dataFin ? projet.dataFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}">show</a>
                    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projet_new') }}">Create new</a>
{% endblock %}
